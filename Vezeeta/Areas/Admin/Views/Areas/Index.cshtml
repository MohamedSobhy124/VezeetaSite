@model IEnumerable<Vezeeta.Models.Area>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List Of Areas </h2>

<p>
    @Html.ActionLink("Add New Area", "Create", null, new { @class = "btn btn-success " })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaName)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.AreaID }, new { @class = "btn btn-primary mb-1" }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.AreaID }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.AreaID }, new { @class = "btn btn-danger mb-1" })
        </td>
    </tr>
}

</table>
